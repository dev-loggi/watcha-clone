<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="3dp" android:layout_marginRight="3dp"
              android:layout_marginTop="2dp"
              android:foreground="?android:attr/selectableItemBackground">

    <com.example.csr83.watchaproject.utils.RadiusImageView
            android:id="@+id/iv_movie"
            android:layout_width="140dp" android:layout_height="210dp"
            android:transitionName="@string/transition_name_movie_tall"
            app:topLeftRadius="6dp" app:topRightRadius="6dp"
            app:bottomLeftRadius="6dp" app:bottomRightRadius="6dp"/>

    <TextView android:id="@+id/tv_movie_title"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:singleLine="true"
              android:textSize="14sp"
              android:textColor="@android:color/black"/>

    <TextView android:id="@+id/tv_movie_subtitle"
              android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="12sp"
              android:textColor="@color/text_color_dark_gray"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="영화"
              android:textSize="12sp"
              android:textColor="@color/text_color_dark_gray"/>

</LinearLayout>